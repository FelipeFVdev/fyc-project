---
// src/components/StatsCard.astro
import LucideIcon from '../LucideIcon.astro';
import { icons } from '@lucide/astro';

interface Props {
  title: string;
  value: number | string;
  icon?: string; // Emoji ou ícone
  description?: string;
  className?: string;
}

const { title, value, icon = '', description, className = '' } = Astro.props;
---

<div class={`bg-card p-6 hover:shadow-lg transition-all duration-300 text-card-foreground gap-6 rounded-xl border py-6 shadow-sm ${className}`}>
    <div class="flex items-center mb-4 gap-3">

      {icon && <LucideIcon class="w-6 h-6" name={icon as keyof typeof icons} />}

      <h3 class="text-sm font-medium mb-1">{title}</h3>
    </div>

    <p class="text-2xl font-bold mb-1">{value}</p>
    {description && <p class="text-xs text-muted-foreground">{description}</p>}
</div>

<style>
  /* Estilos específicos se necessário */
</style>