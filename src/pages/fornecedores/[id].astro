---
// src/pages/fornecedores/[id].astro
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import VisualizarFornecedor from '../../components/fornecedores/VisualizarFornecedor'; // Importação atualizada

// --- Bloco getStaticPaths (permanece o mesmo) ---
export async function getStaticPaths() {
  const fornecedorIds = ['f1', 'f2', 'f3'];

  return fornecedorIds.map(id => ({
    params: { id: id },
  }));
}
// --- Fim do Bloco getStaticPaths ---


const { id } = Astro.params;
---

<DashboardLayout title={`Fornecedor: ${id}`}>
  <VisualizarFornecedor client:load fornecedorId={id!} />
</DashboardLayout>