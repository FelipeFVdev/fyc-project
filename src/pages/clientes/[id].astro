---
// src/pages/clientes/[id].astro
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import VisualizarCliente from '../../components/clientes/VisualizarCliente';

// Importar a funÃ§Ã£o de fetch de clientes para getStaticPaths
import { getClientes } from '../../lib/db';

export async function getStaticPaths() {
  const clientes = await getClientes();
  return clientes.map(cliente => ({
    params: { id: cliente.id },
  }));
}

const { id } = Astro.params;
---

<DashboardLayout title={`Cliente: ${id}`}>
  <VisualizarCliente client:load clienteId={id!} />
</DashboardLayout>